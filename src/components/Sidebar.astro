---
import { SITE_DESCRIPTION } from 'src/meta-data';
import Avatar from './Avatar.astro';
import SocialLinks from './SocialLinks.astro';
---

<div class="flex flex-col justify-end w-full grid-bg">
  <div class="flex flex-col py-8 space-y-5 lg:mb-20 xl:mb-28 2xl:mb-36">
    <Avatar name="KC" />
    <p
      class="px-6 text-xl font-extrabold text-center font-dacingscript text-slate-800 dark:text-white"
    >
      {SITE_DESCRIPTION}
    </p>
    <SocialLinks />
  </div>
</div>
