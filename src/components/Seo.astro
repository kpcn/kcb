---
import type { SeoMetaData } from '@utils/meta';

import { SEO } from 'astro-seo';

import { getMetaData } from '@utils/meta';

export interface Props {
  data?: SeoMetaData;
}

const { data } = Astro.props;
const { title, summary, name, ogimage } = getMetaData(data);
---

<SEO
  title={title}
  description={summary}
  openGraph={{
    basic: {
      title,
      type: name,
      image: ogimage,
    },
  }}
/>
